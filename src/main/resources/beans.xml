<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="Sample"
          name="Sample"
          class ="com.Jspider.springs.demo.Sample"

    />

    <bean id="contact"
          name="contact"
          class="com.Jspider.springs.demo.ContactInfo"/>
    <bean id="address"
          name="address"
          class="com.Jspider.springs.demo.Address"/>

    <bean id="employee"
          name="employee"
          class="com.Jspider.springs.demo.Employee"
          scope="prototype"
    >
        <constructor-arg ref = "contact"/>
<!--        <constructor-arg ref = "address"/>-->

        <property name="id" value="100"/>
        <property name="name" value="Srini"/>
        <property name="salary" value="120000"/>

        <property name="address" ref="address"/>

    </bean>




</beans>
